<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/relLayoutTicket"
tools:context="com.allnone.app.allnone.Ticket">


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Ticket"
    android:id="@+id/textView4" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editText_ticketsub"
    android:layout_marginTop="55dp"
    android:hint="Subject" />

<EditText
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textMultiLine"
    android:ems="10"
    android:id="@+id/editText_ticketdes"
    android:layout_below="@+id/editText_ticketsub"
    android:hint="Description"
    android:gravity="top" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add"
    android:id="@+id/button_ticket"
    android:layout_below="@+id/editText_ticketdes"
    android:layout_centerHorizontal="true" />
    </LinearLayout>
</RelativeLayout>
