<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayoutTicket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.allnone.app.allnone.Ticket">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<EditText
    android:id="@+id/editText_ticketsub"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="55dp"
    android:hint="Subject" />

<EditText
    android:id="@+id/editText_ticketdes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editText_ticketsub"
    android:layout_weight="1"
    android:ems="10"
    android:gravity="top"
    android:hint="Description"
    android:inputType="textMultiLine" />

<Button
    android:id="@+id/button_ticket"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editText_ticketdes"
    android:layout_centerHorizontal="true"
    android:text="Add" />
    </LinearLayout>
</RelativeLayout>
