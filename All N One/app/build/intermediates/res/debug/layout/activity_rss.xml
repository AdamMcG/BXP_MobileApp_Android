<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RssTabsActivity"
    android:background="#ffc3fff8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latest News"
        android:id="@+id/textView_latestNews"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listMainView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_login1"
        android:layout_below="@+id/textView_latestNews">
    </ListView>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button_login1"
        android:layout_gravity="center_horizontal"
        android:onClick="toLogin"
        android:background="#ff5176ff"
        android:textStyle="bold|italic"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@drawable/bxp_homepage_banner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />


</RelativeLayout><!-- From: file:/Users/testing/Desktop/AndroidStudioProjects/All%20N%20One/app/src/main/res/layout/activity_rss.xml -->