<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/relLayoutTomorrow"
    tools:context="com.allnone.app.allnone.Tomorrow">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|left"
        android:layout_weight="0.5"
        android:gravity="center_vertical|center_horizontal"
        android:text="Tomorrow"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:theme="@style/AppTheme" />


    <Button
        android:id="@+id/button_toToDo2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        android:onClick="loadToDo"
        android:text="Add To Do" />
    </LinearLayout>
    <ListView
        android:id="@+id/tomorrow_AppointmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:background="#4b96e2" />
    <ListView
        android:id="@+id/tomorrow_listeeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:background="#a0e524" />

</LinearLayout>

</RelativeLayout>
